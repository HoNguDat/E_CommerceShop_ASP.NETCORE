@model ASP.NETCORE_PROJECT.Models.Brand

@{
    ViewBag.Title = "Admin | Edit brand page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Main -->
<div class="app-main__inner">

    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-ticket icon-gradient bg-mean-fruit"></i>
                </div>
                <div>
                    Brand
                    <div class="page-title-subheading">
                        View, create, update, delete and manage.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="brand_id" />
                        <div class="form-group">
                            <label asp-for="brand_name" class="control-label">Brand name</label>
                            <input asp-for="brand_name" class="form-control" />
                            <span asp-validation-for="brand_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BrandImage" class="control-label">Image</label>
                            <div class="custom-file">
                                <input type="file" asp-for="BrandImage" class="custom-file-input" id="file"
                                       onchange="document.getElementById('ImagePrv').src=window.URL.createObjectURL(this.files[0])" />

                                <label class="custom-file-label" for="file">Choose file</label>
                            </div>
                            <span asp-validation-for="BrandImage" class="text-danger"></span>
                            <img id="ImagePrv" src="~/Admin/assets/images/brand/@Model.brand_image" alt="Image" width="100px" height="100px" style="border:1px solid blue;margin-top:20px;" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Main -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}