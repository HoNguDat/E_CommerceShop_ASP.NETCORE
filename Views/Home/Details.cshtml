                    @{
                        var check = ViewBag.Comments as List<Comment>;
                        var dem = check.Where(x => x.comment_productid == Model.product_id).Count();
                        int count = 0;
                        //foreach (var item in check)
                        //{
                        //    if(item.comment_productid==Model.product_id)
                        //    {
                        //        count= check.Count();
                        //    }
                        //}
                    }
                    <h4 class="mb-4">@dem bình luận cho sản phẩm @Model.product_name</h4>
                   
                     @if (check.Any(x => x.comment_productid==Model.product_id))
                    {
                        @foreach (var item in ViewBag.Comments as List<Comment>)
                        {
                            if (item.comment_productid == Model.product_id)
                            {
                                <div class="media mb-4" id="commentList">
                                    <img src="~/images/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                    <div class="media-body">
                                        @{
                                            var user = ViewBag.ListUser as List<ApplicationUser>;
                                            string username = "";                                          
                                        }
                                         @for(int i =0;i<user.Count;i++)
                                            {
                                            if (item.comment_userid == user[i].Id)
                                                {
                                                    username = user[i].FullName;
                                                }
                                            }
                                        <h6>@username<small> - <i>@item.comment_createdon.ToString("dd/MM/yyyy")</i></small></h6>
                                        <div class="text-primary mb-2">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                            <i class="far fa-star"></i>
                                        </div>
                                        <p>@item.comment_content</p>
                                    </div>
                                </div>
                            }                           
                        }
                    }
                    else
                    {
                        <div class="media mb-4">
                            <p>Không có nhận xét nào </p>
                        </div>
                    }                                
                </div>
                <div class="col-md-6">
                    <h4 class="mb-4">Leave a review</h4>
                    <div class="d-flex my-3">
                        <p class="mb-0 mr-2">Your Rating * :</p>
                        <div class="text-primary">
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
                    </div>
                    <form asp-action="PostComment" asp-controller="Comment" asp-route-productId="@Model.product_id">
                        <div class="form-group">
                            <label for="message">Your Review *</label>

                            <textarea id="commentInput" placeholder="Comment..." cols="30" rows="5" class="form-control" name="content"></textarea>
                           
                        </div>
                        <div class="form-group mb-0">
                            <input id="submitBtn" type="submit" class="btn btn-primary px-3" value="Post comment">
                        </div>
                    </form>
                </div>
            </div>
        </div>
