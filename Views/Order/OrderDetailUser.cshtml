@using Microsoft.AspNetCore.Identity
@using ASP.NETCORE_PROJECT.Areas.Identity.Data
@model IEnumerable<OrderDetail>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="~/Home/Index">Home</a>
                <span class="breadcrumb-item active">Chi tiết đơn hàng</span>
            </nav>
        </div>
    </div>
</div>
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5 p-30">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Product image</th>
                        <th>Product name</th>
                        <th>Product price</th>
                        <th>Ordered product quantity</th>                      
                        
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {                      
                        <tr data-id="@item.orderdetail_productid" class="product-row">
                            <td class="align-middle"><img src="~/Admin/assets/images/product/@item.Product.product_image" width="150px" height="150px" /></td>
                                @* <td class="align-middle">@string.Format("{0:#,0}",item.order_totalbill) VNĐ</td>*@
                            <td class="align-middle">@item.Product.product_name</td>
                            <td class="align-middle">@string.Format("{0:#,0}",item.Product.product_price) VNĐ</td>
                            <td class="align-middle">@item.orderdetail_quantity</td>
                                @* <td class="align-middle" style="color:red">@item.order_status</td>
                        <td class="align-middle"><a class="btn btn-info" asp-action="OrderDetailUser" asp-controller="Order">Order details</a></td>*@
                        </tr>                

                        
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.product-row').click(function () {
                var productId = $(this).data('id');
                window.location.href = '/Home/Details/' + productId;
            });
        });
    </script>
}
<!-- Cart End -->